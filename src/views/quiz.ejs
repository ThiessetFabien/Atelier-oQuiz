<%- include('./partials/header') %>

    <main class="container py-4">

        <h1 class="text-center m-2">
            <%= quiz.title %>
        </h1>

        <h2 class="text-center m-2">
            <%= quiz.description %>
                </h1>

                <h2 class="small text-end">
                    <%= quiz.author.firstname %>
                        <%= quiz.author.lastname %>
                </h2>

                <h2 class="small text-end">
                    <%= quiz.author.created_at %>
                </h2>

                <h3>Th√®mes</h3>
                <ul class="mb-4 p-0">
                    <% quiz.tags.forEach(tag=> { %>
                        <li class="badge bg-primary">
                            <%= tag.name %>
                        </li>
                        <% }); %>
                </ul>

                <h3>Questions</h3>
                <% quiz.questions.forEach(question=> { %>
                <span class="badge bg-info">
                    <%= question.level.name %>
                </span>
                <p class="fw-bold mb-1">
                    <%= question.description %>
                </p>
                <div class="mb-3 ms-2">
                    <div>
                        <% question.propositions.forEach(answer=> { %>
                        <div>
                            <input type="radio" id="#" name="#" value="#">
                            <label for="#">
                                <%= answer.description %>
                            </label>
                        </div>
                        <% }); %>

                    </div>
                </div>
                <p class="fst-italic text-secondary">
                    <%= question.anecdote %>
                </p>
<% }); %>


                <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>
    </main>

    <%- include('./partials/footer') %>