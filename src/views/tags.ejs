
<%- include('./partials/header') %>

<main class="container py-4">

  <h1>Thèmes</h1>

  <div>

    <% tags.forEach(tag => { %>
      <span class="badge bg-primary p-2 mb-1" id="<%= tag.name %>"><%= tag.name %></span>

      <% if (tag.quizzes.length === 0) { %>

        <p class="ms-2">Aucun quizz dans cette catégorie pour le moment...</p>

      <% } else { %>
        <ul>
          <% tag.quizzes.forEach(quiz => { %>
            <li>
              <a href="/quiz/<%= quiz.id %>"><%= quiz.description %></a>
            </li> 
          <% }) %>
        </ul>

      <% } %>

    <% }) %>    

  </div>

</main>

<%- include('./partials/footer') %>